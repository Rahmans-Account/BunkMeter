<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attendance Calculator</title>
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-800 flex items-center justify-center font-sans"
  >
    <div
      class="bg-gray-900/80 border border-gray-700 rounded-2xl shadow-lg w-full max-w-lg p-10 backdrop-blur-sm"
    >
      <h1
        class="text-3xl md:text-4xl font-semibold text-center text-gray-100 mb-10 tracking-wide"
      >
        Attendance Calculator
      </h1>

      <form action="/calculate" method="POST" class="space-y-8">
        <!-- Start Date -->
        <div>
          <label
            for="startDate"
            class="block text-sm font-medium text-gray-300 mb-2"
          >
            Start Date
          </label>
          <input
            type="date"
            id="startDate"
            name="startDate"
            required
            class="w-full px-4 py-2 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 outline-none transition"
          />
        </div>

        <!-- End Date -->
        <div>
          <label
            for="endDate"
            class="block text-sm font-medium text-gray-300 mb-2"
          >
            End Date
          </label>
          <input
            type="date"
            id="endDate"
            name="endDate"
            required
            class="w-full px-4 py-2 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 outline-none transition"
          />
        </div>

        <!-- Current Attendance -->
        <div>
          <label
            for="percentage"
            class="block text-sm font-medium text-gray-300 mb-2"
          >
            Current Attendance %
          </label>
          <input
            type="number"
            id="percentage"
            name="percentage"
            required
            placeholder="Enter your current %"
            class="w-full px-4 py-2 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 outline-none transition"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-gradient-to-r from-gray-700 to-gray-600 text-white py-3 rounded-lg font-medium tracking-wide hover:from-indigo-600 hover:to-indigo-500 transition shadow-md"
        >
          Calculate
        </button>
      </form>
    </div>
  </body>
</html>
